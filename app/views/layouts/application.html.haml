  %head
    %title= t('title')
    = stylesheet_link_tag 'application', :media => 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %hgroup
      %header
        %h1= t('title')
    .content
      .notices
        %p#notice= notice
        %p#alert= alert
      = yield